TEMPLATE	= app
LANGUAGE	= C++

VPATH = @srcdir@
QMAKE_CXXFLAGS += -std=c++11 -I../ -DENABLE_XMLCONF

CONFIG	+= qt warn_on thread release debug
QT += widgets

LIBS += -lupnpp

INCLUDEPATH += ../src
INCLUDEPATH += @srcdir@/../src
INCLUDEPATH += @srcdir@/..

HEADERS	+= confgui.h mainwindow.h

SOURCES	+= confmain.cpp \
           confgui.cpp \
           ../src/conftree-fixed.cpp \
           ../src/smallut.cpp \
           ../src/pathut.cpp

target.path = "$$PREFIX/bin"
INSTALLS += target
